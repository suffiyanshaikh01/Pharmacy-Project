package com.webportal.feign;

import java.util.List;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PutMapping;

import com.webportal.vomodel.MedicineStockVO;


@FeignClient("MEDICINESTOCK-SERVICE")
public interface MedicineStockClient {
	
	
	@GetMapping("")
	public List<MedicineStockVO> getAllMedicineStock();
	
	@GetMapping("/get-stock-count/{medicine}")
	public MedicineStockVO getMedicineStockByMedicineName(@PathVariable String medicine);
	
	@PutMapping("/updateStock/{id}/{count}")
	public String updateStock(@PathVariable int id, @PathVariable int count);
}
